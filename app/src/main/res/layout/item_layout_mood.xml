<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item_mood"
    android:layout_width="@dimen/emoji2_width"
    android:layout_height="@dimen/emoji2_height"
    android:layout_margin="@dimen/margin_3"
    android:padding="@dimen/margin_3">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_emoji"
        android:layout_width="@dimen/dimen_62"
        android:layout_height="@dimen/dimen_62"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/iv_layout_mood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_layout_mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_emoji"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_3"
        android:textColor="@color/black"
        android:textSize="@dimen/text_15"
        android:textStyle="italic" />
</RelativeLayout>
