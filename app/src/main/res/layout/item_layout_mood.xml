<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_mood"
    android:layout_width="@dimen/emoji_width"
    android:layout_height="@dimen/emoji_height"
    android:orientation="vertical"
    android:padding="@dimen/margin_8">

    <LinearLayout
        android:id="@+id/ll_inner_item_mood"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_layout_mood"
            android:layout_width="match_parent"
            android:layout_height="@dimen/emoji_width"
            android:layout_margin="3dp" />

        <TextView
            android:id="@+id/tv_layout_mood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-7dp"
            android:textColor="@color/black"
            android:textStyle="italic" />
    </LinearLayout>
</LinearLayout>
